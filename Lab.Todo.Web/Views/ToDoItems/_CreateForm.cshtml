@model Lab.Todo.Web.Models.ToDoItemCreateModel

<form asp-controller="ToDoItems" asp-action="Add" method="post" class="form-with-validation">
    <div>
        @Html.DisplayNameFor(model => model.Title)
        <input asp-for="Title" class="input-group-text" id="title-input" type="text" name="Title"
               placeholder="Your Title... " />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="mt-2">
        @Html.DisplayNameFor(model => model.Description)
        <textarea class="input-group-text" style="width:300px" id="description-input"
                  name="Description" placeholder="Your Description..."></textarea>
    </div>
    
    <div class="mt-2">
        <label asp-for="Deadline"></label>
        <input class="form-control" , style="width:300px" asp-for="Deadline" />
    </div>

    <div class="mt-2">
        @{
            await Html.RenderPartialAsync("_AddTag", Model.TagViewModel);
        }
        <span id="tags-validation"></span>
    </div>

    <div>
        @{
            await Html.RenderPartialAsync("_AddDependency", Model.DependencyViewModel);
        }
    </div>

    <button class="btn btn-success mt-4" type="submit">Create</button>
</form>