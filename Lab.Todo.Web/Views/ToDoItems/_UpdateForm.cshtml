@model Lab.Todo.Web.Models.ToDoItemUpdateModel

<form asp-controller="ToDoItems" asp-action="Edit" method="post" class="form-with-validation">
    <div>
        @Html.DisplayNameFor(model => model.Title)
        <input asp-for="Title" class="input-group-text" id="title-input" type="text" name="Title"
               value="@Model.Title" />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="mt-2">
        @Html.DisplayNameFor(model => model.Description)
        <textarea class="input-group-text" style="width:300px" id="description-input"
                  name="Description">@Model.Description</textarea>
    </div>
    
    <div class="mt-2">
        <label asp-for="Deadline"></label>
        <input asp-for="Deadline" class="form-control" , style="width:300px" />
    </div>

    <div class="mt-2">
        @{
            await Html.RenderPartialAsync("_AddTag", Model.TagViewModel);
        }
        <span id="tags-validation"></span>
    </div>

    <div>
        @{
            await Html.RenderPartialAsync("_AddDependency", Model.DependencyViewModel);
        }
    </div>

    <div class="mt-2">
        @{
            await Html.RenderPartialAsync("_SetStatus", Model.StatusModel);
        }
    </div>

        <button class="btn btn-success mt-4" type="submit">Save</button>
</form>